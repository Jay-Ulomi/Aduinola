<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-5">
            <!-- Left Sidebar: Services List -->
            <div class="col-lg-4">
                <div class="list-group shadow-sm">
                    <a href="#mobile-development" class="list-group-item list-group-item-action active" id="mobile-tab">
                        <i class="fa fa-mobile-alt me-2 text-secondary"></i> Mobile Development
                    </a>
                    <a href="#web-design" class="list-group-item list-group-item-action" id="web-tab">
